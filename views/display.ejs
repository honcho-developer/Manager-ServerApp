  <div class="headerSearch">
    <div class="headLink">
      <h2>Products</h2>
      <button class="btnLink"> <a class="btnLinkA" href="/add_direct">Add New</a></button>
    </div>
    <form class="search" action="/display" method="GET">

      <input class="searchBar" name="search" type="text" placeholder="Search For Products ......." />

      <input class="searchButton" value="Search" type="submit" />

    </form>


  </div>
  <br />
  <br />
  <br />

  <div class="mainDiv">
    
