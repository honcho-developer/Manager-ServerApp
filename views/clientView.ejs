
    <style type="text/css" media="screen">
      body {
        padding: 0;
        margin: 0;
        align-items: center;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        cursor: pointer;
      }
      nav {
        background-color: black;
        display: flex;
        justify-content: space-between;
        padding: 40px;
        font-size: 25px;
        height: 5vh;
      }


      h3 {
        text-align: center;
        font-size: 40px;
      }

      input {
        padding: 20px;
        margin: 10px;
        width: 60vw;
        height: 4vh;
        border: none;
        border-bottom: 1px solid black;
      }
      a {
        padding: 0 15px;
        color: white;
        text-decoration: none;
      }

      .headerSearch{
        display: flex;
        justify-content: space-between;
        background-color: white;
        padding: 10px;
      }
      .search {
        width: 50%;
        display: flex;
        padding: 10px 5px;
      }
      
      .searchButtons {
        width: 10vw;
        padding: 5px 5px;
        font-size: 20px;
        margin: 20px 0;
        background-color: rgb(199, 206, 209);
        border: none;
        height: 5vh;
      }
      .searchBar{
        width: 30vw;
        height: 5vh;
        font-size: 15px;
        padding: 10px;
        margin: 20px;
        background-color: rgb(255, 255, 255);
    
        border: 1px solid black;
      }
      h2 {
        padding-left: 40px;
        font-size: 35px;
      }
      .searchButton {
        width: 9vw;
        background-color: rgb(199, 206, 209);
        border: none;
        height: 7vh;
        width: 7vw;
      }
        .container {
  display: grid;
  grid-gap: 20px;
  background-color: rgba(255, 255, 255, 0.986);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  margin: 20px;
  width: 40vw;
  padding-bottom:  20px;
}

  
      .containerImage {
        width: 40vw;
        height: auto;
      }
      .containerDiv {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      }
      .pText{
        padding: 0 15px;
        margin: 0;
      }
    </style>
    <body>
      <nav>
        <a href="/">Da-ManagerBase</a>
  
        <a href="./login">Admin</a>
      </nav>
      <div class="headerSearch">
          <h2>Products</h2>
      <form class="search" action="/display" method="GET">
        
        <input
          class="searchBar"
          name="search"
          type="text"
          placeholder="Search For Products ......."
        />
      
        <input
          class="searchButtons"
          value="Search"
          type="submit"
        />
       
      </form>
      
     
      </div>
        
          <div class="containerDiv">
            <% users.forEach(function(user) { %>
            <div class="container">
              <div>
                <img class="containerImage" src="<%=user.photo%>" />
              </div>
              <div class="pText">
                <p style="font-size: 20px; font-weight: bolder; color: black;"><%=user.user_name%></p>
                <p style="font-size: 17px;"><%=user.user_product%></p>
                <p style="font-size: 17px;"><span>$ <%=user.user_price%></span></p>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </body>

